<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dp_size_16"
    app:cardCornerRadius="@dimen/dp_size_8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_title"
            android:textSize="@dimen/sp_size_40" />

        <TextView
            android:id="@+id/text_view_fact_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_fact1"
            android:textSize="@dimen/sp_size_20"/>

        <TextView
            android:id="@+id/text_view_fact_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_fact2"
            android:textSize="@dimen/sp_size_20"/>

        <TextView
            android:id="@+id/text_view_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_view_main_text"
            android:textSize="@dimen/sp_size_24"/>

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher_round" />
    </LinearLayout>

</androidx.cardview.widget.CardView>